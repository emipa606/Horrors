      <ArmorRating_Sharp>0.25</ArmorRating_Sharp>
      <Insulation_Cold>-30</Insulation_Cold>
      <Insulation_Heat>30</Insulation_Heat>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Undergrowth/Undergrowth</wornGraphicPath>
