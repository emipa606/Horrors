<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="HorrorApparelBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <Beauty>-6</Beauty>
    </statBases>
    <tradeability>None</tradeability>
    <destroyOnDrop>True</destroyOnDrop>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>
  <ThingDef ParentName="HorrorApparelBase">
    <defName>Horror_Pants</defName>
    <label>infested pants</label>
    <description>The pants this person must have been wearing at the time they fell victim to the horrors.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Pants/Pants</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <generateAllowChance>0.15</generateAllowChance>
    <statBases>
      <Mass>0.5</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Cold>-3</Insulation_Cold>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Horrors</li>
      </tags>
      <defaultOutfitTags>
        <li>Horrors</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  <ThingDef ParentName="HorrorApparelBase">
    <defName>Horror_Undergrowth</defName>
